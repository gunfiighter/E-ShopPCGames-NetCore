@model IEnumerable<BuiMuiGaim_Models.Genre>

<div class="container p-3 bg-white">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Genre List</h2>
        </div>

        <div class="col-6 text-right">
            <a asp-controller="Genre" asp-action="Create" class="btn btn-primary">
               <i class="fas fa-plus"></i> &nbsp; Create New Genre
            </a>
        </div>
    </div>
    <br />
    <br />

    @if(Model.Count() > 0)
            {
                <table class="table table-bordered table-stripped" style="width:100%">
                    <thead>
                        <tr>
                            <th>
                                Genre Name
                            </th>
                            <th>
                                Display Order
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var obj in Model)
                {
                    <tr>
                        <td width="50%">@obj.Name</td>
                        <td width="30%">@obj.DisplayOrder</td>
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Genre" asp-route-Id="@obj.GenreId" asp-action="Edit" class="btn btn-primary mx-2">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-controller="Genre" asp-route-Id="@obj.GenreId" asp-action="Delete" class="btn btn-danger mx-2">
                                    <i class="fas fa-trash-alt"></i>
</a>
                            </div>
                        </td>
                    </tr>
                }
                    </tbody>
                </table>
            }
    else
            {
                <p>No Genre exists.</p>
            }
</div>

