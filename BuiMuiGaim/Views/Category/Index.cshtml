@model IEnumerable<BuiMuiGaim.Models.Category>

<div class="container p-3">
    <div class="row pt-4">
        <h2 class="text-primary">Category List</h2>
    </div>
    <div class="col-6">
        Create New Category
    </div>
    <br />
    <br />

    @if(Model.Count() > 0)
            {
                <table class="table table-bordered" table-stripped" style="width:100%">
                    <thead>
                        <tr>
                            <th>
                                Category Name
                            </th>
                            <th>
                                Display Order
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var obj in Model)
                {
                    <tr>
                        <td width="50%">@obj.Name</td>
                        <td width="30%">@obj.DisplayOrder</td>
                        <td></td>
                    </tr>
                }
                    </tbody>
                </table>
            }
    else
            {
                <p>No category exists.</p>
            }
</div>

